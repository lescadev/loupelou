{% extends 'base.html.twig' %}

{% block title %} LouPelou{% endblock %}

{% block body %}
<section class="articles">
    {% for article in articles|reverse if article.isActive == true %}
            <h2>{{article.title}}</h2>
            <div class="metadata">Publié le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}}<div>
            <div class="content">
                <img style="max-width: 30%;" src="/uploads/images/articles/{{article.image}}" alt="{{article.imageDescription}}">
                <p>{{article.content}}</p>
                <a href="{{ path('blogArticle', {'id': article.id})}}" class="btn btn-primary">Lire la suite</a>
            </div>
            <hr>
    {% endfor %}
</section>    
{% endblock %}