{% extends 'base.html.twig' %}

{% block title %}
    Où les utiliser - {{ parent() }}
{% endblock %}

{% block body %}

    <h1 class="principale mb-4">Où utiliser les pelous</h1>
    <div class="row py-3 px-3">
        <div class="input-group mb-3">
            <input class="form-control" type="text" placeholder="Rechercher" id="search" name="search" />
            <select class="custom-select" id="sel1">
                <option>Tous les services</option>
                {% for categorie in categories %}
                    <option>{{ categorie }}</option>
                {% endfor %}
            </select> <select class="custom-select" id="sel2">
                <option>Toutes les distances</option>
                <option>15km</option>
                <option>30km</option>
                <option>50km</option>
                <option>80km</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mt-3">
            <div id="map"></div>
            <div class="mt-3"><a class="btn bg-principale blanc" href={{ path('pdf.prestataires') }}>Annuaire prestataire</a></div>
        </div>
        <div class="col mt-3">
            <div id="annuaire" class="prestataire"></div>
        </div>
    </div>
    {% include 'pages/modalPartial.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
            integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
            crossorigin="">
    </script>
    <script type="text/javascript" src="/js/geolocalisation.js"></script>
    <script type="text/javascript" src="/js/set_map.js"></script>
    <script type="text/javascript" src="/js/ajax-annuaire.js"></script>
    <script type="text/javascript" src="/js/event.js"></script>
    <script type="text/javascript">
        setEvent('{{ status }}');
    </script>
{% endblock %}