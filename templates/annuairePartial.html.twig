{% set card_construct %}
{% if response is defined%}
<div class="row pre-scrollable">
    {%for result in response  %}
    <div class="flex-fill card border-dark mb-3">
        <div class="card-header">{{result.denomination}}
            {% if result.nom is defined %}
            <h6 class="card-subtitle mt-2 text-muted">{{ result.nom }}</h6>
            {% endif %}
        </div>
        <div class="card-body text-dark">
            <p class="card-text"><i class="fas fa-phone-alt"></i> Tel : {{ result.0.telephone }}</p>
            <p class="card-text"><i class="fas fa-map-marker-alt"></i> Adresse : {{ result.0.adresse }}&nbsp;
                &nbsp; Ã  &nbsp;
                &nbsp;{{ result.0.ville }}</p>
        </div>
    </div>
    {%endfor%}
</div>
{% endif %}
{% endset %}

{% set response = response|merge({'card': card_construct}) %}

