{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - {{ parent() }}{% endblock %}

{% block body %}
    {% if not isactive %}
        <div>
            <p>Ce compte n'est pas actif</p>
        </div>
    {% endif %}

    <div id="containerProfil">
        {% include "espaceMembre/menuModif.html.twig" %}
        <div id="blockProfil">
            <h2 id="profilTitle">Modifier mon mot de passe</h2>
            {{ form_start(form) }}
            {{ form_row(form.password.first, {'label': 'Nouveau mot de passe : '}) }}
            {{ form_row(form.password.second, {'label': 'Confirmation : '}) }}
            <button type="submit">Modifier mon mot de passe &raquo;</button>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
