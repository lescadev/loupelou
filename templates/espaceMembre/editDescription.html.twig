{% extends 'base.html.twig' %}

{% block title %}Modifier ma description - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="principale text-center">Mon Compte</h1>

    {% if not isactive %}
        <div>
            <p class="text-warning text-center blanc bg-warning py-1 px-1">Ce compte n'est pas actif</p>
        </div>
    {% endif %}

    <div class="row mb-5">
    <div class="col-md-4 mt-2 mb-4">
        <div class="border-principale py-3 px-3">
            {% include "espaceMembre/menuModif.html.twig" %}
        </div>
    </div>

    <div class="col-md-8 mt-2">
        <div class="form-group border-principale py-4 px-4">
            <h3 class="mb-4">Modifier ma description</h3>
            {{ form_start(form) }}
            {{ form_row(form.description, {'value' : user.description, 'attr' : {"class": "form-control mb-3", "rows": "12"} }) }}
            <button class="btn bg-principale blanc" type="submit">Valider</button>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}