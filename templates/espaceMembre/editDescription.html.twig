{% extends 'base.html.twig' %}

{% block title %}Modifier ma description - {{ parent() }}{% endblock %}

{% block body %}
    {% if not isactive %}
        <div>
            <p>Ce compte n'est pas actif</p>
        </div>
    {% endif %}

    <div id="containerProfil">
        {% include "espaceMembre/menuModif.html.twig" %}
        <div id="blockProfil">
            <h2 id="profilTitle">Modifier ma description</h2>
            {{ form_start(form) }}
            {{ form_row(form.description, {'label': 'Description : ', 'value': user.description }) }}
            <button type="submit">Valider</button>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
